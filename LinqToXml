using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Xml.Linq;

namespace ConsoleApplication1
{
    class Program
    {
        static void Main(string[] args)
        {
            var numbers = Enumerable.Range(1, 10);
            IEnumerable<XElement> xml2 =
                numbers.SelectMany(number => new[]
                {
                    new XElement("variable",
                    new XAttribute("name", $"OSDAppn{number}Description"),
                    new XAttribute("property", $"AppInfo{number}Description"),
                    number) ,
                    new XElement("variable",
                    new XAttribute("name", $"OSDApp{number}DisplayName"),
                    new XAttribute("property", $"AppInfo{number}DisplayName"),
                    number) ,
                    new XElement("variable",
                    new XAttribute("name", $"OSDApp{number}Name"),
                    new XAttribute("property", $"AppInfo{number}Name"))
                });
            var test = string.Empty;
            foreach (var element in xml2)
            {
                test += element.ToString();
                Console.WriteLine( string.Concat(element.ToString()));
            }
        }
    }
}
